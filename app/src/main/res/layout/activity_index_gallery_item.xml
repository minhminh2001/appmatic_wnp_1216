<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imaginato="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <ImageView
        android:id="@+id/id_index_gallery_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@color/greyF7F7F7"
        android:scaleType="fitXY" />

    <com.whitelabel.app.widget.CustomTextView
        android:id="@+id/ctvCategoryName"
        style="@style/font_family_robot_regular"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        android:textColor="@color/black333333"
        android:textSize="10sp" />

    <View
        android:id="@+id/v_right"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/id_index_gallery_item_image"
        android:visibility="gone" />

</RelativeLayout>